@model GimnasioWeb.Models.Socio

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registro de Socio</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <div class="form-container" style="padding: 6rem 2rem;">
        <h2>Registro de Socio</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.LabelFor(m => m.Nombre)
                @Html.TextBoxFor(m => m.Nombre)
            </div>

            <div>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </div>

            <div>
                @Html.LabelFor(m => m.Contraseña)
                @Html.PasswordFor(m => m.Contraseña)
            </div>

            <div>
                @Html.LabelFor(m => m.Telefono)
                @Html.TextBoxFor(m => m.Telefono)
            </div>

            <div>
                @Html.LabelFor(m => m.FechaNacimiento)
                @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { type = "date" })
            </div>

            <button type="submit" class="btn">Registrarse</button>
        }

        @Html.ValidationSummary()
    </div>
</body>
</html>